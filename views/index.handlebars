<h3 class="header">Burgers!</h3>
<div class="container">
  <img class="img" src= "/assets/img/burger.png">
</div>
<div class="container list">
  <div class="row">
    <div class="col s6">
      <div>Burger(s) list</div>
      <ul>
        {{#each burgers}}
        {{#unless devour}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="container list">
      <div class="col s6">
        <div>Devoured!</div>
        <ul>
          {{#each burgers}}
          {{#if devour}}
          {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<div>Add a Burger</div>
<form class="create-form">

  <div class="form-group">
    <label for="yum">Burger:</label>
    <input type="text" id="yum" name="name">
  </div>


  <button type="submit">Add</button>
</form>